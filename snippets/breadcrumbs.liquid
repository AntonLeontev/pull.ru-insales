<!-- Breadcrumbs -->
<div class="container">
  <ul class="breadcrumb">

    {% case template %}
      {% when 'collection' %}
      
        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        {% if current_collections.size > 0 %}

          {% for collection in current_collections %}
            {% if forloop.last %}
            <li class="breadcrumb_item">
              <span class="breadcrumb_link current">{{ collection.title }}</span>
            </li>
            {% else %}
            <li class="breadcrumb_item">
              <a class="breadcrumb_link" href="{{ collection.url }}">{{ collection.title }}</a>
            </li>
            {% endif %}
          {% endfor %}
          
        {% endif %}
      {% when 'product' %}
      {{current_collections}}
        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>


        {% if product.collections.size > 0 %}
        {% assign collections = product.collections | sort: 'level' %}
          {% for collection in collections %}
          {% if last_collection_title != collection.title %}
            <li class="breadcrumb_item">
              <a class="breadcrumb_link" href="{{ collection.url }}">{{ collection.title }}</a>
            </li>
          {% endif %}
          {% assign last_collection_title = collection.title %}
          {% endfor %}
          
        {% endif %}
      
        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">{{ product.title }} </span>
        </li>

      {% when 'blog' %}

        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">{{ blog.title }}</span>
        </li>
      
      {% when 'article' %}

        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/blog">{{ blog.title }}</a>
        </li>

        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">{{ article.title }}</span>
        </li>

      {% when 'page' %}
        
        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">{{ page.title }}</span>
        </li>

      {% when '404' %}
      
        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">Страница не найдена</span>
        </li>

      {% when 'search' %}

        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">Поиск по каталогу</span>
        </li>

      {% when 'cart' %}

        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">Ваша корзина</span>
        </li>

      {% when 'compare' %}

        <li class="breadcrumb_item">
          <a class="breadcrumb_link" href="/">Главная</a>
        </li>

        <li class="breadcrumb_item">
          <span class="breadcrumb_link current">Сравнение товаров</span>
        </li>

      {% else %}
        
    {% endcase %}
  </ul>
</div>
