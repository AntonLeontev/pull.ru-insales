<!DOCTYPE html>
<html>
  <head>
    {% include "head" %}
  </head>
  <body>
    <div class="wrapper">

      {% include "header" %}

      <main class="main">
        
      {% unless template contains 'index' or page.url contains 'page/muzh' or page.url contains 'page/zhen' %}	
        {% include "breadcrumbs" %}
      {% endunless %}  
      
      {{ content_for_layout }}

      </main>

      {% include "footer" %}

      {% include "filters_block" %}

    </div>

    <!-- swiper -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <script src="{{ 'nice-select2.js' | asset_url }}"></script>

    <!-- главый js -->
    <script src="{{ 'main.js' | asset_url }}"></script>

    {% include "microdata" %}

    <!-- Изменение ссылок при просмотре не основного шаблона -->
    <script>
      let loc = new URL(document.location.href);

      if (loc.searchParams.has("theme_preview")) {
        let ref = loc.searchParams.get("theme_preview");
        let links = document.querySelectorAll("a");

        links.forEach((link) => {
          if (link.href.includes("pull.ru")) {
            let url = new URL(link.href);
            url.searchParams.set("theme_preview", ref);
            link.href = url.href;
          }
        });
      }
    </script>
  </body>
</html>
